<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".UIActivity"
    android:background="@drawable/background_four">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="uWatch,a digital forensic tool used by community members in South Africa to assist in reducing crime"
        android:id="@+id/description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#fffaf8f6" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:id="@+id/line_divider"
        android:layout_below="@+id/description"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose a media type to capture"
        android:id="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#fffaf8f6"
        android:layout_below="@+id/line_divider"
        android:layout_marginTop="2dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/uWatchPhoto"
        android:src="@drawable/image"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="110dp"/>


    <ImageView
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:id="@+id/uWatchVideo"
        android:src="@drawable/video_capture"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="280dp"
         />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/uWatchAudio"
        android:src="@drawable/voice"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="420dp" />


</RelativeLayout>
