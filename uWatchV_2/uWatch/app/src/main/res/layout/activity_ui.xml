<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".UIActivity">





    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uWatchLogo"
        android:src="@drawable/uwatchlogo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose a media type to capture"
        android:id="@+id/textView"
        android:layout_below="@+id/uWatchLogo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uWatchPhoto"
        android:src="@drawable/uwatchphoto"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="110dp"/>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uWatchVideo"
        android:src="@drawable/uwatchvideo"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="230dp"
  />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uWatchAudio"
        android:src="@drawable/uwatchaudio"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="380dp" />


</RelativeLayout>
